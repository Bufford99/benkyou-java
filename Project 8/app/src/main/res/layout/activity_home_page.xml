<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Homepage"
    tools:context=".HomePage"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/button_ePLesson1"
        android:layout_width="125dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:background="@color/ButtonBackground"
        android:text="Lesson 1"
        app:layout_constraintTop_toBottomOf="@+id/text_elementaryProg"
        tools:layout_editor_absoluteX="5dp" />

    <Button
        android:id="@+id/button_sLesson1"
        android:layout_width="125dp"
        android:layout_height="52dp"
        android:background="@color/ButtonBackground"
        android:text="Lesson 1"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="443dp" />

    <ProgressBar
        android:id="@+id/widget_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="203dp"
        android:layout_height="21dp"
        android:layout_marginTop="120dp"
        android:progressTint="@color/ProgressBar"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="91dp" />

    <Button
        android:id="@+id/button_ePLesson2"
        android:layout_width="125dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:background="@color/ButtonBackground"
        android:text="Lesson 2"
        app:layout_constraintTop_toBottomOf="@+id/text_elementaryProg"
        tools:layout_editor_absoluteX="130dp" />

    <TextView
        android:id="@+id/text_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selection"
        android:textColor="@color/Black"
        android:textSize="32dp"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="329dp" />

    <TextView
        android:id="@+id/text_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress"
        android:textColor="@color/Black"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="67dp" />

    <TextView
        android:id="@+id/text_elementaryProg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Elementary Programming"
        android:textColor="@color/Black"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@+id/widget_progressBar"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/text_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Homepage"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/Black"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_ePLesson2"
        android:layout_width="130dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:background="@color/ButtonBackground"
        android:text="Lesson 3"
        app:layout_constraintTop_toBottomOf="@+id/text_elementaryProg"
        tools:layout_editor_absoluteX="255dp" />

    <Button
        android:id="@+id/button_sLesson2"
        android:layout_width="125dp"
        android:layout_height="53dp"
        android:background="@color/ButtonBackground"
        android:text="Lesson 2"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="442dp" />

    <Button
        android:id="@+id/button_sLesson3"
        android:layout_width="125dp"
        android:layout_height="53dp"
        android:background="@color/ButtonBackground"
        android:text="Lesson 3"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="442dp" />

</android.support.constraint.ConstraintLayout>